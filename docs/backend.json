{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
            "type": "string",
            "format": "uri",
            "description": "The URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "description": "The user's role.",
          "enum": ["admin", "secretary", "patron", "matron"]
        }
      },
      "required": ["uid", "email", "role"]
    },
    "student": {
      "title": "Student",
      "description": "A student enrolled in the school for a specific term.",
      "type": "object",
      "properties": {
        "termId": {
            "type": "string",
            "description": "The ID of the term the student is enrolled in."
        },
        "name": {
          "type": "string",
          "description": "The student's full name."
        },
        "class": {
          "type": "string",
          "description": "The student's class."
        },
        "gender": {
          "type": "string",
          "description": "The student's gender.",
          "enum": ["male", "female"]
        },
        "location": {
          "type": "string",
          "description": "The student's home location."
        },
        "parentName": {
          "type": "string",
          "description": "The name of the student's parent or guardian."
        },
        "parentPhone": {
          "type": "string",
          "description": "The phone number of the student's parent or guardian."
        },
        "totalFees": {
          "type": "number",
          "description": "The total school fees for the student for the term."
        },
        "feesPaid": {
          "type": "number",
          "description": "The amount of school fees the student has paid for the term."
        },
         "utilities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "materialId": { "type": "string" },
              "status": { "type": "string", "enum": ["present", "missing"] }
            }
          }
        },
        "refectoryTableMorning": {
            "type": "number",
            "description": "Assigned table for morning and lunch."
        },
        "refectoryTableEvening": {
            "type": "number",
            "description": "Assigned table for evening."
        }
      },
      "required": ["termId", "name", "class", "gender", "location", "parentName", "parentPhone", "totalFees", "feesPaid"]
    },
    "feeSettings": {
        "title": "Fee Settings",
        "description": "Stores the school fee structure.",
        "type": "object",
        "properties": {
            "oLevelFee": {
                "type": "number",
                "description": "The tuition fee for O-Level students."
            },
            "aLevelFee": {
                "type": "number",
                "description": "The tuition fee for A-Level students."
            }
        },
        "required": ["oLevelFee", "aLevelFee"]
    },
    "academicYear": {
        "title": "Academic Year",
        "description": "Represents a school academic year.",
        "type": "object",
        "properties": {
            "year": {
                "type": "string",
                "description": "The academic year range, e.g., '2024-2025'."
            }
        },
        "required": ["year"]
    },
    "term": {
        "title": "Term",
        "description": "Represents a term within an academic year.",
        "type": "object",
        "properties": {
            "academicYearId": {
                "type": "string",
                "description": "The ID of the parent academic year."
            },
            "name": {
                "type": "string",
                "description": "The name of the term.",
                "enum": ["First Term", "Second Term", "Third Term"]
            },
            "status": {
                "type": "string",
                "description": "The status of the term.",
                "enum": ["active", "ended"]
            }
        },
        "required": ["academicYearId", "name", "status"]
    },
    "appSettings": {
        "title": "Application Settings",
        "description": "Global settings for the application.",
        "type": "object",
        "properties": {
            "activeTermId": {
                "type": "string",
                "description": "The ID of the currently active term for data entry and display."
            }
        }
    }
  },
  "auth": {
    "providers": ["anonymous", "google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/students/{studentId}": {
      "schema": {
        "$ref": "#/entities/student"
      },
      "description": "Stores student enrollment information for a specific term."
    },
    "/settings/fees": {
        "schema": {
            "$ref": "#/entities/feeSettings"
        },
        "description": "Stores the application-wide fee settings."
    },
    "/academicYears/{yearId}": {
        "schema": {
            "$ref": "#/entities/academicYear"
        },
        "description": "Stores academic years."
    },
    "/academicYears/{yearId}/terms/{termId}": {
        "schema": {
            "$ref": "#/entities/term"
        },
        "description": "Stores terms for a given academic year."
    },
    "/settings/app": {
        "schema": {
            "$ref": "#/entities/appSettings"
        },
        "description": "Stores global application settings like the active term."
    }
  }
}
