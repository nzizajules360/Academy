{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
            "type": "string",
            "format": "uri",
            "description": "The URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "description": "The user's role.",
          "enum": ["admin", "secretary", "patron", "matron", "teacher", "developer"]
        }
      },
      "required": ["uid", "email", "role"]
    },
    "student": {
      "title": "Student",
      "description": "A student enrolled in the school for a specific term.",
      "type": "object",
      "properties": {
        "termId": {
            "type": "string",
            "description": "The ID of the term the student is enrolled in."
        },
        "name": {
          "type": "string",
          "description": "The student's full name."
        },
        "class": {
          "type": "string",
          "description": "The student's class."
        },
        "gender": {
          "type": "string",
          "description": "The student's gender.",
          "enum": ["male", "female"]
        },
        "location": {
          "type": "string",
          "description": "The student's home location."
        },
        "religion": {
            "type": "string",
            "description": "The student's religion.",
            "enum": ["Adventist", "Abahamya", "Catholic", "Ajepra", "Muslim"]
        },
        "parentName": {
          "type": "string",
          "description": "The name of the student's parent or guardian."
        },
        "parentPhone": {
          "type": "string",
          "description": "The phone number of the student's parent or guardian."
        },
        "totalFees": {
          "type": "number",
          "description": "The total school fees for the student for the term."
        },
        "feesPaid": {
          "type": "number",
          "description": "The amount of school fees the student has paid for the term."
        },
         "utilities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "materialId": { "type": "string" },
              "status": { "type": "string", "enum": ["present", "missing"] }
            }
          }
        },
        "refectoryTableMorning": {
            "type": "number",
            "description": "Assigned table for morning and lunch."
        },
        "refectoryTableEvening": {
            "type": "number",
            "description": "Assigned table for evening."
        },
        "dormitoryBed": {
            "type": "number",
            "description": "The assigned dormitory bed number for the student."
        }
      },
      "required": ["termId", "name", "class", "gender", "location", "parentName", "parentPhone", "totalFees", "feesPaid"]
    },
    "feeSettings": {
        "title": "Fee Settings",
        "description": "Stores the school fee structure.",
        "type": "object",
        "properties": {
            "oLevelFee": {
                "type": "number",
                "description": "The tuition fee for O-Level students."
            },
            "aLevelFee": {
                "type": "number",
                "description": "The tuition fee for A-Level students."
            }
        },
        "required": ["oLevelFee", "aLevelFee"]
    },
    "academicYear": {
        "title": "Academic Year",
        "description": "Represents a school academic year.",
        "type": "object",
        "properties": {
            "year": {
                "type": "string",
                "description": "The academic year range, e.g., '2024-2025'."
            }
        },
        "required": ["year"]
    },
    "term": {
        "title": "Term",
        "description": "Represents a term within an academic year.",
        "type": "object",
        "properties": {
            "academicYearId": {
                "type": "string",
                "description": "The ID of the parent academic year."
            },
            "name": {
                "type": "string",
                "description": "The name of the term.",
                "enum": ["First Term", "Second Term", "Third Term"]
            },
            "status": {
                "type": "string",
                "description": "The status of the term.",
                "enum": ["active", "ended"]
            },
            "paymentDeadline": {
                "type": "string",
                "format": "date",
                "description": "The deadline for school fee payments for this term."
            }
        },
        "required": ["academicYearId", "name", "status"]
    },
    "appSettings": {
        "title": "Application Settings",
        "description": "Global settings for the application.",
        "type": "object",
        "properties": {
            "activeTermId": {
                "type": "string",
                "description": "The ID of the currently active term for data entry and display."
            }
        }
    },
    "dailyActivity": {
        "title": "Daily Activity",
        "description": "A plan of activities for a specific class on a given day.",
        "type": "object",
        "properties": {
            "class": {
                "type": "string",
                "description": "The class for which the activity is planned."
            },
            "date": {
                "type": "string",
                "format": "date",
                "description": "The date of the activity in YYYY-MM-DD format."
            },
            "termId": {
                "type": "string",
                "description": "The ID of the term during which the activity is scheduled."
            },
            "morningActivity": {
                "type": "string",
                "description": "The activity planned for the morning."
            },
            "eveningActivity": {
                "type": "string",
                "description": "The activity planned for the evening."
            },
            "createdBy": {
                "type": "string",
                "description": "The UID of the user who created the activity."
            }
        },
        "required": ["class", "date", "termId", "morningActivity", "eveningActivity", "createdBy"]
    },
    "teacherAssignment": {
        "title": "Teacher Assignment",
        "description": "Assigns a teacher to a specific class.",
        "type": "object",
        "properties": {
            "teacherId": {
                "type": "string",
                "description": "The UID of the user with the 'teacher' role."
            },
            "class": {
                "type": "string",
                "description": "The class assigned to the teacher."
            }
        },
        "required": ["teacherId", "class"]
    },
    "attendanceRecord": {
        "title": "Attendance Record",
        "description": "Stores a daily attendance record for a student.",
        "type": "object",
        "properties": {
            "studentId": {
                "type": "string"
            },
            "studentName": {
                "type": "string"
            },
            "date": {
                "type": "string",
                "format": "date",
                "description": "The date of the record in YYYY-MM-DD format."
            },
            "class": {
                "type": "string"
            },
            "termId": {
                "type": "string"
            },
            "status": {
                "type": "string",
                "enum": ["present", "absent"]
            },
            "recordedBy": {
                "type": "string",
                "description": "The UID of the teacher who recorded the attendance."
            },
             "recordedAt": {
                "type": "string",
                "format": "date-time"
            }
        },
        "required": ["studentId", "date", "class", "termId", "status", "recordedBy"]
    },
     "sentList": {
      "title": "Sent List",
      "description": "A list of students sent from a secretary to a teacher.",
      "type": "object",
      "properties": {
        "sentToTeacherId": { "type": "string" },
        "sentBy": { "type": "string", "description": "Display name of the sender" },
        "sentAt": { "type": "string", "format": "date-time" },
        "listType": { "type": "string", "enum": ["outstanding_fees", "class_roster"] },
        "title": { "type": "string" },
        "termId": { "type": "string" },
        "students": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "class": { "type": "string" },
              "outstandingBalance": { "type": "number" }
            }
          }
        },
        "isRead": { "type": "boolean" }
      },
      "required": ["sentToTeacherId", "sentBy", "sentAt", "listType", "title", "termId", "students", "isRead"]
    },
    "material": {
        "title": "Material",
        "description": "A required or optional item for a student.",
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "required": { "type": "boolean" }
        },
        "required": ["name", "required"]
    },
    "dormitorySettings": {
        "title": "Dormitory Settings",
        "description": "Configuration for dormitory management.",
        "type": "object",
        "properties": {
            "studentsPerBed": { "type": "number" }
        },
        "required": ["studentsPerBed"]
    },
    "systemSettings": {
        "title": "System Settings",
        "description": "Global developer-controlled settings for the application.",
        "type": "object",
        "properties": {
            "maintenanceMode": {
                "type": "boolean",
                "description": "If true, the application is in maintenance mode for non-admins."
            },
            "userRegistration": {
                "type": "boolean",
                "description": "If true, new users can register."
            },
            "financialModules": {
                "type": "boolean",
                "description": "If true, financial features are enabled."
            },
            "attendanceSystem": {
                "type": "boolean",
                "description": "If true, attendance tracking is enabled."
            },
            "refectoryManagement": {
                "type": "boolean",
                "description": "If true, refectory management is enabled."
            }
        }
    }
  },
  "auth": {
    "providers": ["anonymous", "google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "Stores user profile information."
    },
    "/students/{studentId}": {
      "schema": {
        "$ref": "#/entities/student"
      },
      "description": "Stores student enrollment information for a specific term."
    },
    "/settings/fees": {
        "schema": {
            "$ref": "#/entities/feeSettings"
        },
        "description": "Stores the application-wide fee settings."
    },
    "/settings/system": {
        "schema": {
            "$ref": "#/entities/systemSettings"
        },
        "description": "Stores global developer settings."
    },
    "/academicYears/{yearId}": {
        "schema": {
            "$ref": "#/entities/academicYear"
        },
        "description": "Stores academic years."
    },
    "/academicYears/{yearId}/terms/{termId}": {
        "schema": {
            "$ref": "#/entities/term"
        },
        "description": "Stores terms for a given academic year."
    },
    "/settings/app": {
        "schema": {
            "$ref": "#/entities/appSettings"
        },
        "description": "Stores global application settings like the active term."
    },
    "/dailyActivities/{activityId}": {
        "schema": {
            "$ref": "#/entities/dailyActivity"
        },
        "description": "Stores daily activity plans for classes."
    },
    "/teacherAssignments/{assignmentId}": {
        "schema": {
            "$ref": "#/entities/teacherAssignment"
        },
        "description": "Stores assignments of teachers to classes."
    },
    "/attendanceRecords/{recordId}": {
        "schema": {
            "$ref": "#/entities/attendanceRecord"
        },
        "description": "Stores daily attendance records for students."
    },
    "/sentLists/{listId}": {
      "schema": {
        "$ref": "#/entities/sentList"
      },
      "description": "Stores lists sent from secretaries to teachers."
    },
    "/materials/{materialId}": {
      "schema": { "$ref": "#/entities/material" },
      "description": "Stores the list of school materials."
    },
    "/settings/dormitory": {
        "schema": { "$ref": "#/entities/dormitorySettings" },
        "description": "Stores dormitory configuration."
    }
  }
}
